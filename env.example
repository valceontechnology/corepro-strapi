# ── Database ───────────────────────────────────────────
DATABASE_HOST=corepro-db
DATABASE_PORT=5432
DATABASE_NAME=corepro_strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=CHANGE_ME_USE_A_REAL_PASSWORD
DATABASE_SSL=false

# ── Strapi Secrets ─────────────────────────────────────
# Generate each with: openssl rand -base64 32
APP_KEYS=key1-CHANGE-ME,key2-CHANGE-ME
ADMIN_JWT_SECRET=CHANGE_ME
API_TOKEN_SALT=CHANGE_ME
TRANSFER_TOKEN_SALT=CHANGE_ME
JWT_SECRET=CHANGE_ME

# ── Server ─────────────────────────────────────────────
HOST=0.0.0.0
PORT=1337
PUBLIC_URL=https://admin.corepro.co

# ── Postgres (for the db container) ───────────────────
POSTGRES_DB=corepro_strapi
POSTGRES_USER=strapi
POSTGRES_PASSWORD=CHANGE_ME_USE_A_REAL_PASSWORD
